{

  "manifest_version": 2,
  "name": "Send to Corsica",
  "version": "3.0",

  "description": "Send the URL of the currently open tab to a Corsica screen.",
  "icons": {
    "32": "icons/corsica-32.png",
    "64": "icons/corsica-64.png"
  },

  "applications": {
    "gecko": {
      "id": "send2corsica@potch.me",
      "strict_min_version": "45.0"
    }
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "browser_style": false,
    "default_icon": "icons/corsica-32.png",
    "default_title": "Send to Corsica",
    "default_popup": "panel.html"
  }

}
